server {
    server_name taskistudy.hopto.org;

    location / {
        proxy_pass http://127.0.0.1:8000;
    }

    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html =404;
    }

    listen 443 ssl;
    listen [::]:443 ssl;
    ssl_certificate /etc/letsencrypt/live/taskistudy.hopto.org/fullchain.pem; # managed by Certb>
    ssl_certificate_key /etc/letsencrypt/live/taskistudy.hopto.org/privkey.pem; # managed by Cer>
    include /etc/letsencrypt/options-ssl-nginx.conf;

}


server {
    if ($host = taskistudy.hopto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



