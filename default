#    server_name taskistudy.hopto.org;
#    return 404; # managed by Certbot
}

server {
    server_name kittygrami.hopto.org;


    location /api/ {
        proxy_pass http://127.0.0.1:8080;
    }


        location /admin/ {
        proxy_pass http://127.0.0.1:8080;
    }

    location / {
        root   /var/www/kittygrami/html;
        index  index.html index.htm;
        try_files $uri /index.html;
    }

    location /media/ {
        alias /var/www/kittygrami/media/;
    }


    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/kittygrami.hopto.org/fullchain.pem; # managed by Certb>
    ssl_certificate_key /etc/letsencrypt/live/kittygrami.hopto.org/privkey.pem; # managed by Cer>
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


    location /static/ {
        alias /var/www/kittygrami/static/;
    }



